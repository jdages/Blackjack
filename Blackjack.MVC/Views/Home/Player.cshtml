@model Blackjack.API.Models.PlayerModel
<div class="row">
    <div class="card">
        @Html.TextBoxFor(a => a.Name)
        @Html.LabelFor(a => a.Name, "Name")
        @Html.TextBoxFor(a => a.HitSoftSeventeen)
        @Html.LabelFor(a => a.HitSoftSeventeen, "Hit soft ")

        @Html.TextBoxFor(a => a.StartingBalance)
        @Html.LabelFor(a => a.StartingBalance, "Starting Balance")

        @Html.DropDownListFor(a => a.HitSoftSeventeen, new List<SelectListItem> { new SelectListItem() { Text = "Yes", Value = "true", Selected = true }, new SelectListItem() { Text = "No", Value = "false", Selected = true } })
        @Html.LabelFor(a => a.StartingBalance, "Hit Soft Seventeen")
    </div>
</div>
